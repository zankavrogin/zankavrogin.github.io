- wrap_layout :layout do
  %header.main.floater
    = partial "layouts/elements/topnav"

  .wrapper.blog-wrapper
    - if is_blog_article?
      - if !current_article.data.image.nil? && !current_article.data.image.empty?
        %header.front-img{:style => "background-image:#{current_article.data.image}"}
          .container
            %time{:datetime => current_article.date}
              %span
                = current_article.date.strftime('%d')
              = current_article.date.strftime('%b')

    .container
      - if is_blog_article?
        = partial "blog/article", locals: { current_article: current_article }
      - else
        = yield

    .clearfix


  = partial "layouts/elements/footer"
